
:root 
  font-size 62.5%

body 
  margin 0
  font-family "IBM Plex Mono"
  font-size 1.6rem
  color black
  overflow hidden

.setup
  margin 3.6rem

.time
  display flex
  flex-direction column


h2
  font-size 1.6rem
  margin-top 4.8rem

button
  margin-top 4.8rem


.hide
  display none !important


.drawing
  background-color black
  display flex
  justify-content center

  height 100vh
  width 100vw

  .curImage
    align-self center

    img
      width 100vw
      max-height 100vh
      object-fit contain


  .info
    position absolute
    left 0
    bottom 0

    background-color white
    // border 1px solid black

    display flex
    flex-direction column
    
    .timeDisplay
      padding 0.6rem
      text-align center

    .controls
      display flex

      div
        cursor pointer

        border 1px solid black
        width 24px
        height 24px
        text-align center

        &:hover
          background-color black
          color white